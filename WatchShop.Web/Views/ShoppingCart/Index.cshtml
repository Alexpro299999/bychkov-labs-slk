@model WatchShop.Web.Models.ShoppingCartViewModel
@{
    ViewData["Title"] = "Корзина";
}

<h1>Ваша корзина</h1>

@if (Model.CartItems.Count > 0)
{
    <table class="table align-middle">
        <thead>
            <tr>
                <th style="width: 10%"></th>
                <th style="width: 35%">Товар</th>
                <th style="width: 15%">Цена</th>
                <th style="width: 15%">Количество</th>
                <th style="width: 15%">Сумма</th>
                <th style="width: 10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>
                        <img src="@(item.ImageUrl ?? "/images/tclassic.jpg")" class="img-fluid rounded" style="max-width: 75px;" alt="@item.WatchName">
                    </td>
                    <td>@item.WatchName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateCart" method="post" class="d-flex">
                            <input type="hidden" name="watchId" value="@item.WatchId" />
                            <input type="number" name="quantity" value="@item.Quantity" class="form-control form-control-sm" style="width: 70px;" />
                            <button type="submit" class="btn btn-outline-secondary btn-sm ms-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z" />
                                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466" />
                                </svg>
                            </button>
                        </form>
                    </td>
                    <td>@item.Total.ToString("C")</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.WatchId" class="btn btn-danger btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><strong>Итого:</strong></td>
                <td colspan="2" class="fs-5"><strong>@Model.Total.ToString("C")</strong></td>
            </tr>
        </tfoot>
    </table>

    <div class="text-end mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Продолжить покупки</a>
        <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Оформить заказ</a>
    </div>
}
else
{
    <div class="alert alert-info">
        Ваша корзина пуста. <a asp-controller="Home" asp-action="Index" class="alert-link">Вернуться в каталог</a>.
    </div>
}