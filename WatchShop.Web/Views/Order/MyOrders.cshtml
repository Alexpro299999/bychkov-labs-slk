@model IEnumerable<WatchShop.DataAccess.Models.Order>

@{
    ViewData["Title"] = "Мои заказы";
}

<h1>Мои заказы</h1>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">
        У вас пока нет заказов. <a asp-controller="Home" asp-action="Index">Перейти в каталог</a>.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Номер заказа</th>
                    <th>Дата</th>
                    <th>Статус</th>
                    <th>Сумма</th>
                    <th>Товары</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.Id</td>
                        <td>@order.OrderDate.ToString("g")</td>
                        <td>
                            @if (order.Status == "Принят")
                            {
                                <span class="badge bg-warning text-dark">@order.Status</span>
                            }
                            else if (order.Status == "Выполнен")
                            {
                                <span class="badge bg-success">@order.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">@order.Status</span>
                            }
                        </td>
                        <td class="fw-bold">@order.Total.ToString("C")</td>
                        <td>
                            <ul class="list-unstyled mb-0 small">
                                @foreach (var detail in order.OrderDetails)
                                {
                                    <li>
                                        @detail.Watch?.Name x @detail.Quantity
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}