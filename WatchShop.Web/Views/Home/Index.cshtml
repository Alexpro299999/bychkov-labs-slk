@model IEnumerable<WatchShop.DataAccess.Models.Watch>
@using WatchShop.DataAccess.Models
@{
    ViewData["Title"] = "Каталог";
    var categories = ViewBag.Categories as IEnumerable<Category> ?? new List<Category>();
}

<style>
    .card-img-top {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }
</style>

<div class="row mb-3">
    <div class="col-md-4">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="SearchString" value="@ViewBag.CurrentFilter" class="form-control" placeholder="Найти часы..." />
                <button type="submit" class="btn btn-primary">Поиск</button>
            </div>
        </form>
    </div>
    <div class="col-md-8 d-flex justify-content-end align-items-center">
        <form asp-action="Index" method="get" class="d-flex" id="filterForm">
            <input type="hidden" name="sortOrder" value="@ViewBag.CurrentSort" />
            <input type="hidden" name="searchString" value="@ViewBag.CurrentFilter" />
            <select name="category" class="form-select me-2" onchange="document.getElementById('filterForm').submit()">
                <option value="">Все категории</option>
                @foreach (var category in categories)
                {
                    <option value="@category.Name" selected="@(ViewBag.CurrentCategory == category.Name ? "selected" : null)">@category.Name</option>
                }
            </select>
        </form>

        <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-category="@ViewBag.CurrentCategory" class="btn btn-light me-2">Сорт. по Названию</a>
        <a asp-action="Index" asp-route-sortOrder="@ViewBag.PriceSortParm" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-category="@ViewBag.CurrentCategory" class="btn btn-light">Сорт. по Цене</a>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@(item.ImageUrl ?? "/images/tclassic.jpg")" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><strong>@item.Price.ToString("C")</strong></p>
                    <p class="card-text"><small class="text-muted">@item.Category.Name / @item.Manufacturer.Name</small></p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Подробнее</a>
                </div>
            </div>
        </div>
    }
</div>