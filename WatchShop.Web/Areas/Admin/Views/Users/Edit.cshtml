@model WatchShop.Web.Areas.Admin.Models.EditUserViewModel

@{
    ViewData["Title"] = "Редактировать пользователя";
}

<h1>Редактировать пользователя</h1>
<h4>@Model.Email</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <hr />
            <h4>Роли</h4>

            <div class="mb-3">
                @foreach (var role in Model.Roles)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               name="SelectedRoles"
                               value="@role.Name"
                               class="form-check-input"
                               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
                        <label class="form-check-label">@role.Name</label>
                    </div>
                }
            </div>

            <div class="mb-3">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Назад к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}