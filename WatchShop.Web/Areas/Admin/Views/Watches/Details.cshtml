@model WatchShop.DataAccess.Models.Watch

@{
    ViewData["Title"] = "Детали товара";
}

<h1>Детали товара</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="@(Model.ImageUrl ?? "/images/tclassic.jpg")" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Название</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Описание</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Цена</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Категория</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>

                <dt class="col-sm-3">Производитель</dt>
                <dd class="col-sm-9">@Model.Manufacturer?.Name</dd>
            </dl>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Назад к списку</a>
            </div>
        </div>
    </div>
</div>