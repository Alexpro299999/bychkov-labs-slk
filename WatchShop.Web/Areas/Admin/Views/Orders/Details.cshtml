@model WatchShop.DataAccess.Models.Order

@{
    ViewData["Title"] = "Детали заказа #" + Model.Id;
}

<h1>Заказ #@Model.Id</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">Клиент</div>
            <div class="card-body">
                <p><strong>Имя:</strong> @Model.CustomerName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Телефон:</strong> @Model.Phone</p>
                <p><strong>Адрес:</strong> @Model.Address</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">Статус</div>
            <div class="card-body">
                <p><strong>Дата:</strong> @Model.OrderDate</p>
                <p><strong>Текущий статус:</strong> <span class="badge bg-primary">@Model.Status</span></p>

                <form asp-action="UpdateStatus" method="post" class="mt-3">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="input-group">
                        <select name="status" class="form-select">
                            <option value="Принят" selected="@(Model.Status == "Принят")">Принят</option>
                            <option value="Сформирован" selected="@(Model.Status == "Сформирован")">Сформирован</option>
                            <option value="Отправлен" selected="@(Model.Status == "Отправлен")">Отправлен</option>
                            <option value="Выполнен" selected="@(Model.Status == "Выполнен")">Выполнен</option>
                            <option value="Отменен" selected="@(Model.Status == "Отменен")">Отменен</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Обновить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<h4>Состав заказа</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Товар</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@(item.Watch?.Name ?? "Удален")</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@((item.Quantity * item.Price).ToString("C"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-end fw-bold">Итого:</td>
            <td class="fw-bold">@Model.Total.ToString("C")</td>
        </tr>
    </tfoot>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку</a>
</div>