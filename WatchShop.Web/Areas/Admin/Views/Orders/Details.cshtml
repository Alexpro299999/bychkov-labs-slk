@model WatchShop.DataAccess.Models.Order

@{
    ViewData["Title"] = "Детали заказа #" + Model.Id;
}

<h1>Детали заказа #@Model.Id</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Информация о клиенте</h4>
        <dl class="row">
            <dt class="col-sm-4">Имя</dt>
            <dd class="col-sm-8">@Model.CustomerName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Телефон</dt>
            <dd class="col-sm-8">@Model.Phone</dd>

            <dt class="col-sm-4">Адрес</dt>
            <dd class="col-sm-8">@Model.Address</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h4>Информация о заказе</h4>
        <dl class="row">
            <dt class="col-sm-4">Дата заказа</dt>
            <dd class="col-sm-8">@Model.OrderDate</dd>

            <dt class="col-sm-4">Сумма</dt>
            <dd class="col-sm-8">@Model.Total.ToString("C")</dd>

            <dt class="col-sm-4">Текущий статус</dt>
            <dd class="col-sm-8"><strong>@Model.Status</strong></dd>
        </dl>
        <hr />
        <h4>Изменить статус</h4>
        <form asp-action="UpdateStatus" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="input-group">
                <select name="status" class="form-select">
                    <option value="Принят" selected="@(Model.Status == "Принят")">Принят</option>
                    <option value="Сформирован" selected="@(Model.Status == "Сформирован")">Сформирован</option>
                    <option value="Готов к выдаче" selected="@(Model.Status == "Готов к выдаче")">Готов к выдаче</option>
                    <option value="Выполнен" selected="@(Model.Status == "Выполнен")">Выполнен</option>
                </select>
                <button type="submit" class="btn btn-primary">Обновить</button>
            </div>
        </form>
    </div>
</div>

<hr />

<h4>Состав заказа</h4>
<table class="table">
    <thead>
        <tr>
            <th>Товар</th>
            <th>Количество</th>
            <th>Цена за шт.</th>
            <th>Сумма</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@(item.Watch?.Name ?? "Товар не найден")</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@((item.Quantity * item.Price).ToString("C"))</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку заказов</a>
</div>