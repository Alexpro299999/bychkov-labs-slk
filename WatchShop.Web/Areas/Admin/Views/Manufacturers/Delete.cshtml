@model WatchShop.DataAccess.Models.Manufacturer

@{
    ViewData["Title"] = "Удалить производителя";
}

<h1>Удалить производителя</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Страна</dt>
        <dd class="col-sm-10">@Model.Country</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
    </form>
</div>