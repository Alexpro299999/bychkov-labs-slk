<Window x:Class="WatchStore.WPF.Views.AddEditStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Запись на складе" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Часы:"/>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="WatchComboBox" Margin="5" DisplayMemberPath="WatchModel"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Количество:"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="QuantityTextBox" Margin="5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Дата поставки:"/>
        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="DatePicker" Margin="5"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>